# Lush Properties Environment Configuration
# Copy this file to .env and configure your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Session Management
SESSION_SECRET=your_secure_session_secret_here_32_characters_min

# Replit Authentication (if using Replit deployment)
REPL_ID=your_replit_app_id
REPLIT_DOMAINS=your-domain.com,your-replit-domain.replit.app
ISSUER_URL=https://replit.com/oidc

# PostgreSQL Connection Details (auto-populated by Replit)
PGHOST=your_postgres_host
PGPORT=5432
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGDATABASE=your_database_name

# Optional: External API Keys (if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# SENDGRID_API_KEY=your_sendgrid_key_here

# Development vs Production
NODE_ENV=development